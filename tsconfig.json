{
    "include": ["src", "vite.config.ts"],
    "compilerOptions": {
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowJs": false,
        "checkJs": false,
        "types": ["vite/client"],
        "removeComments": true,
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "esnext"
    }
}
